# ──────────────────────────────────────────────────────────────────────────────
# local-anonymizer — environment configuration
# Copy this file to .env and fill in the values.
# NEVER commit your .env file.
# ──────────────────────────────────────────────────────────────────────────────

# ── Ports (host-side) ──────────────────────────────────────────────────────────
# Port the Nuxt UI is exposed on
UI_PORT=3000

# Port the API is exposed on
API_PORT=3001

# ── Uploads & Data ────────────────────────────────────────────────────────────
# Absolute or relative path to the folder the worker watches for new JSON files.
# Default: ./infra/volumes/uploads (relative to the repository root)
UPLOADS_DIR=./infra/volumes/uploads

# Absolute or relative path to the folder used for SQLite DB persistence.
# Default: ./infra/volumes/data
DATA_DIR=./infra/volumes/data

# ── Target delivery endpoint ─────────────────────────────────────────────────
# The worker will POST anonymized payloads here after processing.
# Leave blank to skip delivery (worker will still anonymize and log).
TARGET_URL=

# Optional Authorization header value sent with every delivery request.
# Example: "Bearer eyJhbGciOiJIUzI1NiIsInR..."
TARGET_AUTH_HEADER=

# ── Language ──────────────────────────────────────────────────────────────────
# Language code passed to Presidio analyzer (ISO 639-1).
LANGUAGE=en

# ── API (internal) ────────────────────────────────────────────────────────────
# CORS allowed origin for the API. Use '*' for development.
CORS_ORIGIN=*

# ── Nuxt UI ───────────────────────────────────────────────────────────────────
# Public base URL of the API as seen from the browser.
# For local use, this is typically http://localhost:<API_PORT>
NUXT_PUBLIC_API_BASE=http://localhost:3001
